{
  "manifest_version": 3,
  "name": "trace-pilot",
  "version": "1.0",
  "description": "trace-pilot",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "nativeMessaging"
  ],

  "host_permisssions":["<all_urls>"],

  "background": {
    "service_worker": "dist/background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["dist/content.js"]
    }
  ]
}
